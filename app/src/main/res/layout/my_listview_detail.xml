<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_Cover"
        android:layout_width="164dp"
        android:layout_height="248dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="60dp"

        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="340dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-161dp"
        android:layout_marginLeft="-161dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_toEndOf="@+id/imageView_Cover"
        android:layout_toRightOf="@+id/imageView_Cover"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewAuthor"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toEndOf="@+id/textView_AuthorText"
        android:layout_toRightOf="@+id/textView_AuthorText"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textView_AuthorText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="73dp"
        android:layout_toEndOf="@+id/imageView_Cover"
        android:layout_toRightOf="@+id/imageView_Cover"
        android:text="Author:"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_book_status_Text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView_AuthorText"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/imageView_Cover"
        android:layout_toRightOf="@+id/imageView_Cover"
        android:text="@string/book_status_Text"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/textView_book_status"
        android:layout_width="126dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewAuthor"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/textView_AuthorText"
        android:layout_toRightOf="@+id/textView_AuthorText"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewFinishDate"
        android:layout_width="214dp"
        android:layout_height="46dp"
        android:layout_below="@+id/textView_book_status_Text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-61dp"
        android:layout_marginLeft="-61dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/textView_AuthorText"
        android:layout_toRightOf="@+id/textView_AuthorText"
        android:text="@string/book_finishDate"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>